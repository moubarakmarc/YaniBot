{
  "name": "yanibot-frontend",
  "version": "1.0.0",
  "description": "YaniBot Frontend Tests",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='js/**/*.js' --collectCoverageFrom='!js/main.js'",
    "test:ci": "jest --ci --coverage --watchAll=false --verbose",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "canvas": "^2.11.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleDirectories": ["node_modules", "<rootDir>/js", "<rootDir>/tests"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/main.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": ["html", "text", "lcov"],
    "verbose": true,
    "clearMocks": true
  }
}